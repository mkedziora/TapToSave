<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.education.EducationFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView1"
        android:src="@drawable/wwf"
        android:layout_width="207dp"
        android:layout_height="228dp"
        android:layout_marginTop="104dp"
        app:shapeAppearanceOverlay="@style/roundborder"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewLinkOne"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="8dp"
        android:text="WWF/Freshwater"
        android:textAlignment="textStart"
        android:textColor="#0061E0"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
        app:layout_constraintStart_toStartOf="@+id/imageView1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView3"
        android:src="@drawable/rosa"
        android:layout_width="207dp"
        android:layout_height="228dp"
        app:shapeAppearanceOverlay="@style/roundborder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView4"
        android:src="@drawable/ourworld"
        android:layout_width="207dp"
        android:layout_height="228dp"
        app:shapeAppearanceOverlay="@style/roundborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:src="@drawable/waterdrop"
        android:layout_width="207dp"
        android:layout_height="228dp"
        android:layout_marginTop="104dp"
        app:shapeAppearanceOverlay="@style/roundborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewLinkTwo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text="25 ways to save water"
        android:textAlignment="textStart"
        android:textColor="#0061E0"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView1" />

    <TextView
        android:id="@+id/textViewLinkThree"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="textStart"
        android:text="Why save water?"
        android:textColor="#0061E0"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textViewLinkFour"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text="Water Use and Stress"
        android:textAlignment="textStart"
        android:textColor="#0061E0"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>